root = true

[*]
charset = utf-8
max_line_length = 120
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 4

[*.sln]
indent_style = tab

[*.{csproj,shproj,proj,projitems}]
indent_size = 2

[*.{xml,config,props,targets,nuspec,resx,ruleset}]
indent_size = 2

[*.json]
indent_size = 2
max_line_length = 80

[*.{yaml,yml}]
indent_size = 2
max_line_length = 80
